    const validateAdd = () => {
        const password_input = $('#add-password-input');
        const name_input = $('#add-name-input');
        const email_input = $('#add-email-input');
        password_input.parent().removeClass("is-invalid");
        name_input.parent().removeClass("is-invalid");
        email_input.parent().removeClass("is-invalid");
        if(name_input.val() === "") {
            $('#errmsg').html("Vui lòng nhập tên người quản lí.")
            name_input.parent().addClass("is-invalid");
            return false;
        }
        if(password_input.val() === "") {
            $('#errmsg').html("Vui lòng nhập Password.")
            capacity_input.parent().addClass("is-invalid");
            return false;
        }
        if(email_input.val() === "") {
            $('#errmsg').html("Vui lòng nhập Email.")
            current_input.parent().addClass("is-invalid");
            return false;
        }
        return true;
    }

    $(".modal").on("hidden.bs.modal", function() {
        $("input").val("");
        $(".input-group-outline").removeClass("is-filled");
