            name_input.parent().addClass("is-invalid");
            return false;
        }
        if(sales_limit_input.val() === "") {
            $('#add-noti-msg').html("Vui lòng nhập số lượng mua giới hạn của gói.")
            price_input.parent().addClass("is-invalid");
