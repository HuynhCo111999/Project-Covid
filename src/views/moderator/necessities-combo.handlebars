            $('#add-noti-msg').html("Số lượng mua tối thiểu không được vượt quá tối đa (2)");
            min_limit_input_2.parent().addClass("is-invalid");
            max_limit_input_2.parent().addClass("is-invalid");
            return false;
        }
        return true;
    }
</script>