            return false;
        }

        if (document.getElementById('opt_2').selected){
             $('#add-noti-msg').html("Vui lòng chọn sản phẩm 2 để thêm vào gói.")
            return false;
        }

        if (min_limit_input_1.val() === "") {
            $('#add-noti-msg').html("Vui lòng nhập số lượng mua tối thiểu của sản phẩm 1.")
