<!-- Back button -->
<div class="d-flex justify-content-start mb-3">
    <a type="button" class="btn bg-gradient-primary btn-block" href="/moderator/necessities-combo">
        Quay lại
    </a>
</div>

<!-- Add necessities button -->
<div class="d-flex justify-content-end mb-3">
    <button type="button" class="btn bg-gradient-primary btn-block" data-bs-toggle="modal" data-bs-target="#modalAdd">
        Thêm nhu yếu phẩm vào gói
    </button>
</div>

<!-- Modal add -->
<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title font-weight-normal">Chọn nhu yếu phẩm để thêm</h6>
                <button type="button" data-bs-dismiss="modal" class="btn-close" aria-label="Close">
                    <span aria-hidden="true" class="text-primary">X</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <div class="card-body pb-3">
                    <form role="form tex-left" id="add-form" action="/moderator/add-necessity-to-combo" method="post" onsubmit="">
                        <div class="input-group input-group-outline my-3">
                            <select class="form-control" name="necesstities_to_add">
                                <option {{#if necessities}}{{else}}selected{{/if}} disabled>Nhu yêu phẩm cần thêm</option>
                                {{#each necessities}}
                                    <option {{#ifStr necessities "{{this.name}}, {{this.price}} ₫/{{this.unit_of_measurement}}"}}selected{{/ifStr}}>{{this.name}}, {{this.price}} ₫/{{this.unit_of_measurement}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-group input-group-outline my-3">
                            <label class="form-label">Số lượng mua tối thiểu</label>
                            <input type="number" class="form-control" name="min" id="add-min-input" min="1">
                        </div>
                        <div class="input-group input-group-outline my-3">
                            <label class="form-label">Số lượng mua tối đa</label>
                            <input type="number" class="form-control" name="max" id="add-max-input" min="2">
                        </div>
                    </form>
                    <p class="text-danger" id="add-noti-msg"></p>
                </div> 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn bg-gradient-primary" form="add-form">Thêm</button>
            </div>
        </div>
    </div>
</div>

