<div class="card z-index-0 fadeIn3 fadeInBottom py-5">
    <h3 class='text-center my-3'>CÁC THÔNG TIN CƠ BẢN</h3>
    <div class="container-fluid w-75 py-3">
        <div class="row">
            <div class="col">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Họ tên</label>
                    <input type="text" class="form-control" name="name" value="{{currentUser.name}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>       
            <div class="col-4">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">CMND/CCCD</label>
                    <input type="number" class="form-control" name="card" value="{{currentUser.identity_card}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
            <div class="col-2">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Năm sinh</label>
                    <input type="number" class="form-control" name="yob" value="{{currentUser.yob}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
        </div>
        <div class="row">
             <div class="col">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Tỉnh/Thành phố</label>
                    <input type="text" class="form-control" name="province" value="{{currentUser.province}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Quận/Huyện</label>
                    <input type="text" class="form-control" name="district" value="{{currentUser.district}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Phường/Xã</label>
                    <input type="text" class="form-control" name="ward" value="{{currentUser.ward}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                 <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Tình trạng</label>
                    <input type="text" class="form-control" name="status" value="{{currentUser.status}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
            <div class="col">
                <div class="input-group input-group-outline my-3 col is-filled">
                    <label class="form-label">Người liên quan</label>
                    <input type="text" class="form-control" name="related-person" value="{{currentUser.related_person}}" readonly style="border-top-color: transparent !important;">
                </div>
            </div>
        </div> 
        <div class="input-group input-group-outline my-3 col is-filled">
            <label class="form-label">Nơi đang điều trị/cách ly</label>
            <input type="text" class="form-control" name="place" value="{{currentUser.location}}" readonly style="border-top-color: transparent !important;">
        </div>
    </div>
</div>