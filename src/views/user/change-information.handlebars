    <div class="container-fluid  my-auto">
        <div class="card z-index-0 fadeIn3 fadeInBottom">
            <div class="row my-4">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 my-4 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Đổi mật khẩu</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <form role="form" class="text-start" method="post" action="/user/change-information">
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Nhập mật khẩu hiện tại</label>
                                    <input type="password" class="form-control" name="password" {{#if value1}}value="{{value1}}"{{/if}}>
                                    {{#if errMsg1}}
                                        <div class="invalid-feedback d-inline-block text-primary">
                                            {{errMsg1}}
                                        </div>
                                    {{/if}}
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Nhập mật khẩu mới</label>
                                    <input type="password" class="form-control" name="newPassword" {{#if value2}}value="{{value2}}"{{/if}}>
                                    {{#if errMsg2}}
                                        <div class="invalid-feedback d-inline-block text-primary">
                                            {{errMsg2}}
                                        </div>
                                    {{/if}}
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Xác nhận mật khẩu mới</label>
                                    <input type="password" class="form-control" name="confirmPassword" {{#if value3}}value="{{value3}}"{{/if}}>
                                    {{#if errMsg3}}
                                        <div class="invalid-feedback d-inline-block text-primary">
                                            {{errMsg3}}
                                        </div>
                                    {{/if}}
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Lưu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script>
    const formElement = document.querySelector('form');
    document.addEventListener("DOMContentLoaded", function(){
        const formElement = document.querySelector('form');
        const inputElements = formElement.querySelectorAll('input');

        Array.from(inputElements).forEach(function(inputElement, index){
            if (inputElement) {
                let parentInputElement = inputElement.parentElement;
                
                inputElement.oninput = function() {
                    if (parentInputElement){
                        let errElement = parentInputElement.querySelector('.invalid-feedback');
                        if(errElement){
                            parentInputElement.removeChild(errElement);
                        }
                    }
                }
            }
        });
    });
</script>